<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/r_u_working"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >	    

	    <Button
        	android:id="@+id/yes"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.5"
        	android:text="@string/yes" 
        	android:onClick="sendYes" />

    	<Button
        	android:id="@+id/no"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.5"
        	android:text="@string/no"
        	android:onClick="sendNo" />
	</LinearLayout>

	<TextView
        android:id="@+id/coolDownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/coolDown"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    	
		<EditText
	    	android:id="@+id/coolDownNum"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.7"
	    	android:inputType="number" />

		<Button
        	android:id="@+id/coolDownButton"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.3"
        	android:text="@string/setCoolDown"
        	android:onClick="sendCoolDown" />

	</LinearLayout>
 </LinearLayout>